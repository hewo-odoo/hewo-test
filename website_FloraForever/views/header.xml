<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- HEADER - METHOD #01 - Add Custom Header -->
<!-- ======================================= -->

<!-- Theme Header - Option -->
<template id="template_header_opt" inherit_id="website.snippet_options" name="FloraForever Header Template - Option">
    <xpath expr="//we-select[@data-variable='header-template']" position="inside">
        <we-button title="FloraForever"
            data-customize-website-views="website_FloraForever.template_header_layout"
            data-customize-website-variable="'FloraForever'"
            data-img="/website_FloraForever/static/src/img/wbuilder/template_header_opt.svg"/>
    </xpath>
</template>

<!-- Theme Header - Layout -->
<record id="template_header_layout" model="ir.ui.view">
    <field name="name">FloraForever Header</field>
    <field name="type">qweb</field>
    <field name="key">website_FloraForever.template_header_layout</field>
    <field name="priority">16</field>
    <field name="inherit_id" ref="website.layout"/>
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <xpath expr="//header//nav" position="replace">
            <t t-call="website.navbar">
                <t t-set="_navbar_classes" t-value="'flex-lg-column shadow-sm py-0'"/>
                
                    <!-- Top Menu Container -->
                    <div id="top_menu_container" class="container justify-content-between flex-row">
                        
                        <!--Brand-->
                        <t t-call="website.placeholder_header_brand">
                            <t t-set="_link_class" t-valuef="mr-4 py-2"/>
                        </t>

                        <!--Navbar Collapse-->
                        <div id="top_menu_collapse" class="collapse navbar-collapse mr-3">
                            <t t-call="website.navbar_nav">
                                <t t-set="_nav_class" t-valuef="flex-grow-1 justify-content-end py-2"/>

                                <!-- Menu -->
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-valuef="nav-item"/>
                                        <t t-set="link_class" t-valuef="nav-link"/>
                                    </t>
                                </t>
                            </t>   
                        </div>
                                
                            <!-- User Dropdown -->
                            <t t-call="portal.user_dropdown">
                                <t t-set="_icon" t-value="true"/>
                                <t t-set="_user_name" t-value="true"/>
                                <t t-set="_item_class" t-value="'nav-item dropdown pl-3 border-left d-none d-lg-block'"/>
                                <t t-set="_link_class" t-value="'nav-link btn btn-primary'"/>
                                <t t-set="_dropdown_menu_class" t-valuef="dropdown-menu-right"/>
                            </t>
                            
                        

                        <!-- Navbar Toggler -->
                        <t t-call="website.navbar_toggler">
                            <t t-set="_toggler_class" t-valuef="ml-auto"/>
                        </t>
                        
                    </div>
                    <!-- Top Menu Container Close -->
            </t>
        </xpath>
    </field>
</record>

</odoo>